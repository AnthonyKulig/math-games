@model math_games.ViewModels.LoopingGridsIndexViewModel
@using System.Text.Json
@{
    ViewData["Title"] = "Looping Grids";
    var instructionsLoaded = Model.ParsedInstructions != null && Model.ParsedInstructions.Count > 0;
    var stepNumber = Model.CurrentInstructionIndex + 1;
}

<h1>Looping Grids</h1>

<form id="mainForm" asp-controller="LoopingGrids" asp-action="Index" method="post" class="mb-3">
    <div class="row g-3">
        <div class="col-md-6">
            <label asp-for="Instructions" class="form-label"></label>
            <input asp-for="Instructions" class="form-control" placeholder="e.g. 1,2,3,4" />
            <span asp-validation-for="Instructions" class="text-danger"></span>
        </div>
        <div class="col-md-3">
            <label asp-for="StartRow" class="form-label">Start Row</label>
            <input asp-for="StartRow" type="number" class="form-control" min="0" />
        </div>
        <div class="col-md-3">
            <label asp-for="StartColumn" class="form-label">Start Column</label>
            <input asp-for="StartColumn" type="number" class="form-control" min="0" />
        </div>
    </div>
    <input type="hidden" id="ViewModelJson" name="ViewModelJson" value='@Html.Raw(JsonSerializer.Serialize(Model))' />
    <button type="submit" id="submitBtn" class="btn btn-primary mt-3">Submit</button>
    <button type="button" id="nextStepBtn" class="btn btn-secondary mt-3 ms-2" disabled>Next Step</button>
</form>

@if (instructionsLoaded)
{
    <div class="alert alert-info mt-3" id="instructionsStatus">
        <strong>Loaded Instructions:</strong> @string.Join(", ", Model.ParsedInstructions)
        <br />
        <strong>Step:</strong> @stepNumber of @Model.ParsedInstructions.Count
    </div>
}
else
{
    <div class="alert alert-warning mt-3" id="instructionsStatus">
        No instructions loaded. Please enter instructions and submit.
    </div>
}

<div class="mt-4" id="gridContainer">
    @await Html.PartialAsync("_GridPartial", Model)
</div>

@section Scripts {
    <script src="~/js/LoopingGridsIndex.js"></script>
}

@section Styles {
    <link rel="stylesheet" href="~/css/LoopingGridsIndex.css" />
}

<div class="mt-3">
    <a asp-controller="Home" asp-action="Index" class="btn btn-link">Back to Home</a>
</div>
