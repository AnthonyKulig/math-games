        <tbody>
        @for (var r = 0; r < Model.Rows; r++)
        {
            <tr>
                @for (var c = 0; c < Model.Columns; c++)
                {
                    var isActive = Model.Cells[r][c];
                    var cls = isActive ? "active" : "inactive";
                    <td class="cell @cls" data-r="@r" data-c="@c"></td>
                }
            </tr>
        }
